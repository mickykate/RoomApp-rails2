<!DOCTYPE html>
<html>
  <head>
    <title>RailsTest2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header>
    <nav>
     <% if user_signed_in? %>
      <strong><% link_to current_user.username, top_show_path %></strong>
      <%= link_to 'プロフィール変更', users_path %> 
      <%= button_to 'ログアウト', destroy_user_session_path, method: :delete %>
     <% else %>
      <%= link_to 'サインアップ', new_user_registration_path %>
      <%= link_to 'ログイン', new_user_session_path %>
     <% end %>

     <% if @user && @user.icon.present? %>
      <%= image_tag @user.icon.url %>
     <% else %>
      <%= image_tag "icon_sample/default-avatar-7a6cbfd7993e89f24bfc888f4a035a83c6f1428b8bdc47eed9095f2799a40153.png" %>
     <% end %>

    </nav>
   </header>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
